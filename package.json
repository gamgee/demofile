{
  "name": "demofile",
  "version": "1.0.0-beta.1",
  "author": "Saul Rennison <saul.rennison@gmail.com>",
  "license": "MIT",
  "keywords": [
    "demo",
    "source",
    "csgo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saul/demofile.git"
  },
  "scripts": {
    "lint": "tslint -p . --fix --exclude 'src/**/*.d.ts'",
    "build": "tsc && tsc -p ./tsconfig.onlydeclarations.json",
    "watch": "tsc -w",
    "generate-docs": "shx rm -rf docs && typedoc --out docs/",
    "bundle": "npm run build && browserify browser/app.js -d -o browser/bundle.js",
    "preversion": "npm run lint && shx rm -rf dist browser/bundle.js && npm run bundle && git add -A browser/bundle.js dist/**",
    "version": "npm run generate-docs && git add -A docs",
    "postversion": "git push && git push --tags && npm publish",
    "generate-declarations": "tsc -p ./tsconfig.onlydeclarations.json",
    "cp-declarations": "copyfiles -u 1 ./src/bit-buffer.d.ts ./src/pervasive.d.ts ./src/protobufs/cstrike15_usermessages.d.ts ./src/protobufs/netmessages.d.ts ./dist/"
  },
  "main": "dist/demo.js",
  "types": "dist/demo.d.js",
  "dependencies": {
    "@types/bytebuffer": "^5.0.37",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.11.3",
    "bit-buffer": "0.0.3",
    "bytebuffer": "^5.0.0",
    "lodash": "^4.17.11",
    "long": "^3.0.3",
    "protobufjs": "^6.8.8",
    "ts-assert-exists": "^1.0.4",
    "typescript": "^3.1.1"
  },
  "devDependencies": {
    "@types/ansi-styles": "^3.2.0",
    "ansi-styles": "^3.2.1",
    "buffer": "^5.2.1",
    "copyfiles": "^2.1.0",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "minami": "^1.2.3",
    "prettier": "1.14.3",
    "shx": "^0.3.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-language-service-ts3": "^1.0.0",
    "typedoc": "^0.13.0",
    "typestrict": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
